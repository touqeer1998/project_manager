<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ta62sp">
        <item name="android:textSize">62sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ta48sp" parent="ta62sp">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="ta34sp" parent="ta62sp">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="ta_heading">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ta_sub_heading" parent="ta62sp">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ta_body" parent="ta62sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="taH3_B_C_lightblue" parent="ta48sp">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/lightblue</item>
    </style>
    <style name="ta_heading_cayan" parent="ta34sp">
        <item name="fontFamily">@font/roboto_condensed</item>
        <item name="android:textColor">@color/cayan</item>
    </style>
    <style name="ta_sub_heading_grey" parent="ta_sub_heading">
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
    <style name="taH5_R_lightblue" parent="ta_heading">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/lightblue</item>
    </style>
    <style name="ta_heading_grey" parent="ta_heading">
        <item name="android:textColor">@color/grey</item>
    </style>







    <style name="sa_bg_null" parent="btn_style">
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="sa_bg_white_stroke_cayan" parent="btn_style">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/cayan</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
    </style>
    <style name="btn_style">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/_7sdp</item>
        <item name="elevation">0dp</item>
    </style>
</resources>